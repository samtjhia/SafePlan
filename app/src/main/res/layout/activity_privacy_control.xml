<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/privacyScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/deep_champ"
    android:padding="24dp"
    tools:context=".PrivacyControlActivity"
    tools:ignore="ExtraText"> <!-- or .PrivacyActivity -->

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        tools:ignore="MissingConstraints">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="16dp"
            android:background="@drawable/back_button_background"
            android:src="@drawable/ic_arrow_back_2"
            android:contentDescription="Back"
            android:scaleType="centerInside"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Spacer -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <!-- Power Button -->
        <fragment
            android:id="@+id/emergencyExitFragment"
            android:name="com.b07safetyplanapp.EmergencyExitFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </LinearLayout>

    <!-- Title -->
    <TextView
        android:id="@+id/privacyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Privacy and Data"
        android:textSize="24sp"
        android:textColor="@color/black_bean"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <!-- Delete Account Button -->
    <Button
        android:id="@+id/btnDeleteAccount"
        style="@style/PrivacyButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Delete Account and Data"
        android:textColor="@color/white"
        android:backgroundTint="@color/button_maroon"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@id/privacyTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
