<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_peach"
    tools:context=".HomeFragment"
    android:padding="16dp">

    <!-- Emergency Exit Fragment -->
    <fragment
        android:id="@+id/emergencyExitFragment"
        android:name="com.b07safetyplanapp.EmergencyExitFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <!-- Profile Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardProfile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/emergencyExitFragment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    <!-- RecyclerView Button -->
    <Button
        android:id="@+id/buttonPlan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Plan"
        app:layout_constraintTop_toBottomOf="@+id/cardProfile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/imageProfile"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_safe_plan_logo"
                    android:scaleType="centerCrop"
                    android:background="@drawable/ic_safe_plan_logo" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="12dp">

                    <TextView
                        android:id="@+id/textUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loading name..."
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textUserAge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="14sp"
                        android:textColor="@android:color/darker_gray" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="8dp"
                android:background="#cccccc" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Emergency contacts — 3 contacts" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medications — 2" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Important info — Weekly" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check-in reminders — N/A" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Start Questionnaire Button -->
    <Button
        android:id="@+id/start_questionnaire_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Start Questionnaire"
        app:layout_constraintTop_toBottomOf="@id/buttonManageItems"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />
    <!-- Emergency Documents Button -->
    <Button
        android:id="@+id/documents_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Emergency Documents"
        app:layout_constraintTop_toBottomOf="@+id/start_questionnaire_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Emergency Contacts Button -->
    <Button
        android:id="@+id/emergency_contacts_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Emergency Contacts"
        app:layout_constraintTop_toBottomOf="@+id/documents_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />
    <!-- Emergency Medications Button -->
    <Button
        android:id="@+id/emergency_Medications_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Emergency Medications"
        app:layout_constraintTop_toBottomOf="@+id/emergency_contacts_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Emergency Safe Locations Button -->
    <Button
        android:id="@+id/emergency_Safe_Locations_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Emergency Safe Locations"
        app:layout_constraintTop_toBottomOf="@+id/emergency_Medications_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />
    <!-- Settings Button -->
    <Button
        android:id="@+id/buttonSettings"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Settings"
        app:layout_constraintTop_toBottomOf="@+id/emergency_Safe_Locations_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
