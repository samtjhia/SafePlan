<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_peach">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        tools:context=".HomeFragment">

        <fragment
            android:id="@+id/emergencyExitFragment"
            android:name="com.b07safetyplanapp.EmergencyExitFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Welcome Text -->
        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome User"
            android:textColor="@android:color/black"
            android:textSize="32sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            app:layout_constraintTop_toBottomOf="@id/emergencyExitFragment"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp" />

        <!-- Your Safety Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/safetyCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/deep_champ"
            app:layout_constraintTop_toBottomOf="@id/welcomeText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp">

                <!-- Profile Image -->
                <ImageView
                    android:id="@+id/profileImage"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_profile"
                    android:background="@drawable/circle_background"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/safetyTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Safety"
                    android:textColor="@android:color/black"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/safetySubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Review your personalized safety plan"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@id/safetyTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="8dp" />

                <!-- Progress Bar -->
                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="0dp"
                    android:layout_height="8dp"
                    android:layout_marginTop="16dp"
                    android:progress="85"
                    android:progressTint="@color/progress_red"
                    android:progressBackgroundTint="@color/progress_background"
                    style="?android:attr/progressBarStyleHorizontal"
                    app:layout_constraintTop_toBottomOf="@id/safetySubtitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/progressText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="85%"
                    android:textColor="@android:color/black"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/progressBar"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="12dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- Plan Categories Title -->
        <TextView
            android:id="@+id/categoriesTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plan Categories"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/safetyCard"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp" />

        <!-- Grid Layout for Category Cards -->
        <LinearLayout
            android:id="@+id/categoryGrid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/categoriesTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp">

            <!-- First Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <!-- Questionnaire Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/questionnaireCard"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/deep_champ">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/questionIcon"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_question"
                            android:background="@drawable/circle_background_dark"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />

                        <TextView
                            android:id="@+id/questionnaireLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Questionnaire"
                            android:textColor="@android:color/black"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toTopOf="@id/editButton"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginBottom="8dp" />

                        <Button
                            android:id="@+id/editButton"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:text="Edit"
                            android:textSize="12sp"
                            android:textColor="@android:color/white"
                            android:background="@drawable/button_dark_rounded"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <!-- Plan Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/planCard"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/deep_champ">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/planIcon"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_plan"
                            android:background="@drawable/circle_background_dark"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />

                        <TextView
                            android:id="@+id/planLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Plan"
                            android:textColor="@android:color/black"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toTopOf="@id/viewButton"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginBottom="8dp" />

                        <Button
                            android:id="@+id/viewButton"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:text="View"
                            android:textSize="12sp"
                            android:textColor="@android:color/white"
                            android:background="@drawable/button_dark_rounded"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Second Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="16dp">

                <!-- Local Support Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/localSupportCard"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/deep_champ">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/supportIcon"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_support"
                            android:background="@drawable/circle_background_dark"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />

                        <TextView
                            android:id="@+id/localSupportLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Local\nSupport"
                            android:textColor="@android:color/black"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toTopOf="@id/findButton"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginBottom="8dp" />

                        <Button
                            android:id="@+id/findButton"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:text="Find"
                            android:textSize="12sp"
                            android:textColor="@android:color/white"
                            android:background="@drawable/button_dark_rounded"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <!-- Emergency Info Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/emergencyInfoCard"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/deep_champ">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/emergencyIcon"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_emergency"
                            android:background="@drawable/circle_background_dark"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />

                        <TextView
                            android:id="@+id/emergencyInfoLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Emergency\nInfo"
                            android:textColor="@android:color/black"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toTopOf="@id/reviewButton"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginBottom="8dp" />

                        <Button
                            android:id="@+id/reviewButton"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:text="Review"
                            android:textSize="12sp"
                            android:textColor="@android:color/white"
                            android:background="@drawable/button_dark_rounded"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

        <!-- Hidden buttons for backwards compatibility -->
        <Button
            android:id="@+id/buttonRecyclerView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/recyclerview"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/categoryGrid"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/buttonScroller"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/scroller"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/buttonRecyclerView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/buttonSpinner"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/spinner"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/buttonScroller"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/buttonManageItems"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/manage_items"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/buttonSpinner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/start_questionnaire_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Start Questionnaire"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/buttonManageItems"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/show_plan_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Plan"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/start_questionnaire_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/documents_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Emergency Documents"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/start_questionnaire_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/emergency_contacts_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Emergency Contacts"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/documents_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/buttonSettings"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Settings"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/emergency_contacts_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>