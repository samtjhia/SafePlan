<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/reminderScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/deep_champ"
    android:padding="24dp"
    tools:context=".reminders.ReminderScheduleActivity">

    <!-- Top Bar Fragment -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back_2"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            android:padding="8dp" />

        <fragment
            android:id="@+id/logoFragment"
            android:name="com.b07safetyplanapp.HomeNavigationFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/logoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/safe_plan"
            android:textColor="@color/black_bean"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <fragment
            android:id="@+id/emergencyExitFragment"
            android:name="com.b07safetyplanapp.EmergencyExitFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp" />
    </LinearLayout>

    <!-- Page Title -->
    <TextView
        android:id="@+id/reminderTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Set New Reminder"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black_bean"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Set Reminder Container -->
    <LinearLayout
        android:id="@+id/setReminderContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_box_white"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/reminderTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/etReminderTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter reminder title"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:textColorHint="@color/deep_maroon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <Spinner
                android:id="@+id/spinnerFrequency"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:entries="@array/frequency_options"
                android:spinnerMode="dropdown" />

            <TimePicker
                android:id="@+id/timePicker"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:timePickerMode="spinner" />
        </LinearLayout>

        <Button
            android:id="@+id/btnAddReminder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Reminder"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/black_bean"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <!-- Manage Reminders Container -->
    <LinearLayout
        android:id="@+id/manageReminderContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        android:background="@drawable/rounded_box_white"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/setReminderContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/manageRemindersTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manage Reminders"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/black_bean"
            android:layout_marginBottom="8dp" />

        <!-- Dynamically populated list -->
        <LinearLayout
            android:id="@+id/reminderListContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
