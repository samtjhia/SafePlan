<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.b07safetyplanapp">

    <!-- Required for Android 13+ notifications -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />




    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_safe_plan_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_safe_plan_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.B07SafetyPlanApp"
        tools:targetApi="33">
        <receiver android:name=".reminders.ReminderReceiver" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <!-- Entry point -->
        <activity
            android:name=".WelcomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Auth flow -->
        <activity android:name=".signup.SignupActivity" android:exported="true" />
        <activity android:name=".login.LoginActivity" android:exported="true" />
        <activity android:name=".pinsetup.PinSetupActivity" android:exported="true" />

        <!-- Main app -->
        <activity android:name=".MainActivity" android:exported="true" />
        <activity android:name=".TipsActivity" />
        <activity android:name=".QuestionnaireActivity" />
        <activity android:name=".SettingsActivity" />
        <activity android:name=".PrivacyControlActivity" />
        <activity android:name=".reminders.ReminderScheduleActivity" />
        <activity android:name=".SupportResourcesActivity" />

        <!-- Document and Emergency features -->
        <activity android:name=".DocumentActivity" android:exported="false" />
        <activity android:name=".EmergencyContactActivity" android:exported="false" />
        <activity android:name=".EmergencyMedicationActivity" android:exported="false" />
        <activity android:name=".EmergencySafeLocationsActivity" android:exported="false" />


    </application>

</manifest>
